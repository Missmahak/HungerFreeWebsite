    $('div').mousemove(function(a){
    var mouseX =  (a.pageX*-1/300);
    var mouseY =  (a.pageY*-1/200);
    $(this).css('background-position',mouseX+'px '+mouseY+'px ')
  })</script>

</body>

</html>