<link rel="stylesheet" href="/css/aboutus.css" /> --}}
<link rel="stylesheet" href="/css/restaurant_view_page.css" />
<title>ReadMore</title>

</head>

<body>
{{>navbar}}


  <div class="container-new ">
      <div class="inner_box" >
    <section class="cover" >
    <div class="newheading">
        
        
        <div class="icon">  
            <img src="/img/logo.png">
        </div>
        <div class="name">  
            <h1 >{{restaurant.restaurantName}} Restaurant</h1>
            <p class="bio"> Our view and goal is to remove hunger. </p>
            <a href="/addfood">
                <button type="submit" class="btn btn-md btn-warning">Add Food</button>
            </a>
            
        </div>
    </div>
    </section>

        <div class="heading">
        <div class="info">
            {{!-- <tr> --}}
                <p><i class="fa fa-phone" aria-hidden="true"></i> &nbsp 120-234568</p>
                <p><i class="fa fa-envelope" aria-hidden="true"></i> &nbsp {{restaurant.restaurantEmail}} </p>
                <p><i class="fa fa-map-marker" aria-hidden="true"></i> &nbsp {{restaurant.restaurantLocation}} </p>
                <p><i class="fa fa-comment" aria-hidden="true"></i> &nbsp {{restaurant.restaurantAdminName}}</p>
            {{!-- </tr>    
        </table> --}}
        </div>

        {{!-- <table> --}}
            {{#each restaurant.food}}
            <div class="posts">
                {{!-- <td> --}}
                <div class="bar">
                    <div class="restaurant_icon">  <img src="/img/startingphoto.png"></div>
                    <div class="meta_restaurant">  
                        <h4>{{this.foodName}}</h4>
                        <br>
                        <p><strong>Food Type: </strong>{{this.foodType}}</p>
                        <p><strong>Quantity of food in plates: </strong>{{this.foodQuantity}}</p>
                        <p><strong>Food Description: </strong>{{this.foodDescription}}</p>
                        <form action="/deletefood" method="post">
                            <button class="btn btn-dark btn-sm" name="foodid" type="submit" value={{this._id}} onchange="form.submit()">Delete <i class="fa-solid fa-trash-can"></i></button>
                        </form>
                    </div>

                </div>
                <br>
            {{!-- </td>
            </tr> --}}
            {{/each}}
        {{!-- </table> --}}

        
        
    </div>
</div>
</div>

</body>
</html>