{{>header}}

<!-- styleSheet -->

<link rel="stylesheet" href="/css/ngoviewpage.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<title>Ngo View Page</title>

</head>

<body>

    {{>navbar}}
    <div class="container-new">
        <div class="inner_box">
            <table class="heading">
                <tr>
                    <td>
                        <div class="icon">  
                         <img src="/img/robinhood.png">
                        </div>
                    </td>


                    <td>
                        <div class="space">
                            <h1 >{{ngoName}} NGO</h1>
                            {{!-- <p class="bio"> <i class="fa-solid fa-location-pin"></i> &nbsp {{ngoEmail}}</p>
                            <p class="bio"> <i class="fa-solid fa-phone"></i> &nbsp 0101-2335452342 </p>
                             --}}

                            <table>
                                <tr>
                                    <td class="bio"><i class="fa-solid fa-location-pin"></i> &nbsp {{ngoEmail}}</td>
                                </tr>
                                <tr>
                                    <td class="bio"><i class="fa-solid fa-phone"></i> &nbsp 0101-2335452342</td>
                                </tr>
                            </table>
                        </div>
                    </td>
                </tr>

            </table>

            
                <!-- add loop in the table instead of the rows otherwise there will be an issue in the spacing between the rows-->
                
                {{#each restaurantArray}}
                    <div class="spacing">
                        {{!-- <tr > --}}
                            {{!-- <td> --}}
                                <div class="bar">
                                    <div class="restaurant_icon">  
                                        <img src="/img/startingphoto.png">
                                    </div>
                                    <div class="meta_restaurant">  
                                            <h4> {{this.restaurantName}} Restaurant</h4>
                                            <p> Availabilty of the following food with upto 5 plates per person each.
                                            A restaurant (sometimes known as a diner) is a place where cooked food is sold to the public, and where people sit 
                                            down to eat it. It is also a place where people go to enjoy the time and to eat a meal. </p>
                                            <table><tr><td><i class="fa-solid fa-location-pin"></i> &nbsp {{this.restaurantEmail}} </td></tr>
                                            <tr><td><i class="fa-solid fa-phone"></i> &nbsp0101-2467867 </td></tr>
                                            </table>
                                            {{!-- <a href="/readmore" > Read More </a> --}}
                                            <br>
                                            <form action="/readmore" method="post">
                                                <button class="btn btn-dark btn-sm" type="submit" name="restaurantid" value="{{this._id}}" onchange="form.submit()">Read More</button>
                                            </form>
                                            
                                    </div>
                                </div>
                            {{!-- / --}}
                        {{!-- </tr>    --}}
                    </div>
                {{/each}}
                
                
        </div>

                

    </div>


</body>
</html>