{{>header}}
<!--StyleSheets-->
<link rel="stylesheet" href="/css/login.css" />

<title>Hunger Free</title>
</head>

<body >
    <!-- Navbar of the project -->
   {{>navbar}}

    <!--LoginPage of the project-->
    <div class="login_background_design">
        <br>
        <br>
        <br>
        <div class="login_spacing">
            <div class="form_heading">Welcome NGO to HungerFree</div>
            <div class="container">
                <div class="container form_design">

                    <form action="/ngoLogin" method="post" style="margin:2em; padding:2em;">

                        <h3 class="login-heading fw-normal mb-3 pb-3"
                            style="text-align:center; font-family:Sacramento; color:#FDD400"><strong>Log In</strong>
                        </h3>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="adminName">Admin Name</label>
                            <input type="text" id="adminName" name="adminName" class="form-control" placeholder="Enter Admin Name" required/>

                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="email">Email address</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required/>

                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required/>

                        </div>

                        <div class="pt-1 mb-4">
                            <center><input type="submit" class="btn btn-success btn-lg" value="LogIn"></center>
                        </div>

                        <p style="text-align:center;">Don't have an account? <a href="/choicepage" class="link-info">Register
                                here</a> or <a class="text-muted" href="#!">Forgot password?</a></p>

                    </form>


                </div>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>
    

</body>

</html>